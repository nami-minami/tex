\usepackage{forarray}

\def\header#1{\gdef\@header{#1}}
\def\partner#1{\gdef\@partner{#1}}

\renewcommand{\maketitle}{
    \begin{titlepage}
        \begin{center}
			\vspace{1pt}
            {\Large \@header \par}
			\vskip9\baselineskip
            {\Huge \@title \par}
			\vskip\baselineskip
            {\Large \@author \par}
			\vfill
            共同実験者 \par \@partner \par
			\vskip.5\baselineskip
            \@date
            \vspace{1pt}
        \end{center}
    \end{titlepage}
}


\newcommand{\Hline}[2][1.2pt]{\noalign{\hrule height #1}} 
